extends layout

block content

    div(class="wrapper")
        article(class='entry')
            div(class='left-center')
                p by 
                    a(href=author.url) #{author.firstName}
                p= content
                a(href=entry.url+'/edit') update 
                span / 
                a(href=entry.url+'/delete') delete
        div(class='bigDiv title') 
            h1(class='center entryTitle')= title
    


